# =============================================================================
# Docker Compose Environment Configuration
# =============================================================================
# Copy this file to .env and update the values as needed.

# Docker Images
DOCKER_IMAGE_BACKEND=tavily-backend
DOCKER_IMAGE_FRONTEND=tavily-frontend
TAG=latest

# Domain (use localhost for local development)
DOMAIN=localhost
STACK_NAME=tavily-app

# Frontend
FRONTEND_HOST=http://localhost:5179

# Environment: local, staging, production
ENVIRONMENT=local

PROJECT_NAME='Tavily App'

# Backend
BACKEND_CORS_ORIGINS="http://localhost,http://localhost:5179,http://localhost:5180,http://localhost:8009,https://localhost,https://localhost:5179,https://localhost:5180,http://localhost.tiangolo.com"
SECRET_KEY=changethis
FIRST_SUPERUSER=admin@example.com
FIRST_SUPERUSER_PASSWORD=changethis

# Emails (optional for local development)
SMTP_HOST=
SMTP_USER=
SMTP_PASSWORD=
EMAILS_FROM_EMAIL=info@example.com
SMTP_TLS=True
SMTP_SSL=False
SMTP_PORT=587

# Postgres
POSTGRES_SERVER=db
POSTGRES_PORT=5441
POSTGRES_DB=app
POSTGRES_USER=postgres
POSTGRES_PASSWORD=changethis

# Sentry (optional)
SENTRY_DSN=

# Tavily API (get your key from https://tavily.com)
TAVILY_API_KEY=your-tavily-api-key-here

# =============================================================================
# Coolify Deployment (optional - for production deployments)
# =============================================================================
# COOLIFY_API_TOKEN=  API token with write/deploy/read permissions
COOLIFY_API_TOKEN=
# COOLIFY_API_URL=    Base URL (e.g., https://coolify.domain.com/api/v1)
COOLIFY_API_URL=
# GITHUB_REPO=        Repository URL (ex: moshehbenavraham/base_agent)
GITHUB_REPO=
# GITHUB_BRANCH=      Branch to deploy (ex: main)
GITHUB_BRANCH=main
# APP_NAME=           Application name (ex: base-agent-ui)
APP_NAME=
# APP_DOMAIN=         Domain name (ex: baseagent.aiwithapex.com)
APP_DOMAIN=
