# =============================================================================
# Docker Compose Environment Configuration
# =============================================================================
# Copy this file to .env and update the values as needed.

# Docker Images
DOCKER_IMAGE_BACKEND=ai-search-backend
DOCKER_IMAGE_FRONTEND=ai-search-frontend
TAG=latest

# Domain (use localhost for local development)
DOMAIN=localhost
STACK_NAME=ai-search

# Frontend
FRONTEND_HOST=http://localhost:5179

# Environment: local, staging, production
ENVIRONMENT=local

PROJECT_NAME='AI Search'

# Backend
BACKEND_CORS_ORIGINS="http://localhost,http://localhost:5179,http://localhost:5180,http://localhost:8009,https://localhost,https://localhost:5179,https://localhost:5180,http://localhost.tiangolo.com"
SECRET_KEY=changethis
FIRST_SUPERUSER=admin@example.com
FIRST_SUPERUSER_PASSWORD=changethis

# Emails (optional for local development)
SMTP_HOST=
SMTP_USER=
SMTP_PASSWORD=
EMAILS_FROM_EMAIL=info@example.com
SMTP_TLS=True
SMTP_SSL=False
SMTP_PORT=587

# Postgres
POSTGRES_SERVER=db
POSTGRES_PORT=5441
POSTGRES_DB=app
POSTGRES_USER=postgres
POSTGRES_PASSWORD=changethis

# Sentry (optional)
SENTRY_DSN=

# Tavily API (get your key from https://tavily.com)
TAVILY_API_KEY=your-tavily-api-key-here

# =============================================================================
# Deep Research APIs (Phase 03)
# =============================================================================

# Perplexity Sonar API (get your key from https://perplexity.ai)
# Used for AI-powered deep research with citations
PERPLEXITY_API_KEY=
PERPLEXITY_TIMEOUT=300
PERPLEXITY_DEFAULT_MODEL=sonar-pro
PERPLEXITY_SEARCH_MODE=auto
PERPLEXITY_REASONING_EFFORT=medium

# Google Gemini API (get your key from https://ai.google.dev)
# Used for long-running research tasks with polling
GEMINI_API_KEY=
# Alternative name used in some configurations:
GOOGLE_API_KEY=
GEMINI_TIMEOUT=120
GEMINI_POLL_INTERVAL=10
GEMINI_MAX_POLL_ATTEMPTS=360
GEMINI_AGENT=default

# =============================================================================
# Coolify Deployment (optional - for production deployments)
# =============================================================================
# COOLIFY_API_TOKEN=  API token with write/deploy/read permissions
COOLIFY_API_TOKEN=
# COOLIFY_API_URL=    Base URL (e.g., https://coolify.domain.com/api/v1)
COOLIFY_API_URL=
# GITHUB_REPO=        Repository URL (ex: moshehbenavraham/base_agent)
GITHUB_REPO=
# GITHUB_BRANCH=      Branch to deploy (ex: main)
GITHUB_BRANCH=main
# APP_NAME=           Application name (ex: base-agent-ui)
APP_NAME=
# APP_DOMAIN=         Domain name (ex: baseagent.aiwithapex.com)
APP_DOMAIN=
